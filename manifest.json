{
	"manifest_version":3,
	"name": "ChatGpt translator",
	"version": "1.0",
	"description": "Translate your chatgpt conversations to your native language so you don't miss on the power of chatgpt",
	"icons": {
		"16": "GPT-TRANSLATOR.png",
		"48": "GPT-TRANSLATOR.png",
		"128": "GPT-TRANSLATOR.png"
	},
	"permissions": [
		"activeTab",
		"storage",
		"scripting"
	],
	"background": {
		"service_worker": "background.js"
	},
	
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content/content.js", "content/answer.js", "content/translator.js", "content/translateButton.js" ,"styles/style.js" 
			]
		}
	],
	"action": {
		"default_popup": "popup/popup.html"
	},
	"host_permissions": [
		"http://*/*"
	]
}